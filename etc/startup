#!/usr/bin/env bash

set -e

exec composer config --global github-oauth.github.com ${GITHUB_KEY}
exec composer config --global --auth gitlab-token.git.antstudio.cz ${GITLAB_KEY}
exec echo "${SSH_KEY}" > ~/.ssh/authorized_keys

if [ -f /var/www/log/apache.error.log ]; then
	exec rm -f /var/www/log/apache.error.log
fi

if [ -f /var/www/log/apache.access.log ]; then
	exec rm -f /var/www/log/apache.access.log
fi

exec service ssh start

exec apache2-foreground &

if [ -f /var/www/package.json ]; then
	exec npm start
fi
