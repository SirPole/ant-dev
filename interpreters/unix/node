#!/usr/bin/env bash

set -e

if [[ $(ant-machine) == Windows ]]; then
    exec node.bat $@
fi

exec docker run \
  --rm \
  --interactive \
  --tty \
  --user $(id -u):$(id -g) \
  --name node \
  --network ant-dev \
  --volume $(pwd):/app \
  --volume ~/.ant/npm:/tmp \
  sirpole/ant-dev:node node "$@"
