#!/usr/bin/env bash

set -e

echo "Usage:"
echo "    dev [tool] (arguments)"
echo ""
echo "Tools:"
echo "    clear      - Stops and removes all running containers (anywhere)"
echo "    down       - Stop and destroy running containers"
echo "    export     - Exports database to sql file"
echo "        Usage: dev export [database] (path to target directory, defaults to .)"
echo "    help       - Show this help"
echo "    import     - Import database from SQL dump to existing or newly created database"
echo "        Usage: dev import (database) [path to sql file]"
echo "    init       - Initialize docker-compose.yml in current directory, '-d' inits with default options"
echo "        Usage: dev init (-d)"
echo "    reload     - Restarts all containers, equivalent of calling 'dev down && dev up'"
echo "    selfupdate - Update dev-dev"
echo "    start      - Alias for 'up'"
echo "    stop       - Alias for 'down'"
echo "    up         - Start containers if they're not running already"
echo ""
echo "Other standalone interpreters, these are not prefixed by dev command:"
echo "    composer"
echo "    mysql"
echo "    mysqldump"
echo "    node"
echo "    npm"
echo "    npx"
echo "    php"
echo ""
echo "For more information, visit repository wiki: https://github.com/SirPole/dev/wiki"
