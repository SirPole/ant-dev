#!/usr/bin/env bash

set -e

NETWORK=""
ARGS=""

if [[ "$(docker network ls -q -f name=dev)" ]]; then
    NETWORK="--network dev"
fi

if [[ $1 == "install" ]]; then
  ARGS="--ignore-platform-reqs"
fi

exec docker run \
  --rm \
  --interactive \
  --tty \
  --user $(id -u):$(id -g) \
  --name composer \
  ${NETWORK} \
  --volume $(pwd):/app \
  --volume ~/.dev/composer:/tmp \
  composer ${ARGS} "$@"
